// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Category {
  PROTEIN
  SIDE_DISH
  SALAD
  DESSERT
  DRINK
}

model Dish {
  id            Int        @id @default(autoincrement())
  name          String     @unique
  description   String?
  contains_milk Boolean
  contains_meat Boolean
  category      Category
  DishMenu      DishMenu[]
}

model Menu {
  id       Int        @id @default(autoincrement())
  date     DateTime   @unique
  DishMenu DishMenu[]
}

model DishMenu {
  id      Int  @id @default(autoincrement())
  id_dish Int
  dish    Dish @relation(fields: [id_dish], references: [id])
  id_Menu Int
  menu    Menu @relation(fields: [id_Menu], references: [id])
}