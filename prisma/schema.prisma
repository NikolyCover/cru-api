generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Category {
  PROTEIN
  SIDE_DISH
  SALAD
  DESSERT
  DRINK
}

model Dish {
  id            String     @id @default(uuid())
  name          String     //@unique
  description   String?
  contains_milk Boolean
  contains_meat Boolean
  category      Category
  DishMenu      DishMenu[]
}

model Menu {
  id       String     @id @default(uuid())
  date     DateTime
  DishMenu DishMenu[]
  week_id  String
  week     Week       @relation(fields: [week_id], references: [id])
}

model DishMenu {
  id      String @id @default(uuid())
  id_dish String
  dish    Dish   @relation(fields: [id_dish], references: [id])
  id_Menu String
  menu    Menu   @relation(fields: [id_Menu], references: [id])
}

model Week {
  id    String @id @default(uuid())
  menus Menu[]
}
